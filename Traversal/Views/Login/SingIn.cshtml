@model Traversal.Models.UserSingInViewModel


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Giriş Sayfası</title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		  content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<!-- //Meta tag Keywords -->
	<!--/Style-CSS -->
	<link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
	<!--//Style-CSS -->
</head>

<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>Merhaba</h5>
							<h3>Bir Hesabınız yok mu ?</h3>
							<p>
								Lorem ipsum, dolor sit amet consectetur adipisicing elit. Est natus facere aperiam!
								Tenetur maiores dolore a quod pariatur ut voluptates quae saepe ea quasi laudantium,
								iste molestias inventore fuga assumenda.
							</p>
							<a href="/Login/SingUp/" class="read-more-1 btn">Kayıt Ol</a>
						</div>

					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Giriş Yapınız</h4>
					</div>
					<form method="post" class="signin-form">	
						<div class="form-input">
							<label>Kullanıcı Adı</label>
							<input type="text" asp-for="UserName" placeholder="Kullanıcı Adınız" required />
							<span asp-validation-for="UserName"></span>
						</div>
						
						<div class="form-input">
							<label>Şifre</label>
							<input type="password" asp-for="Password" placeholder="Şifreniz" required />
							<span asp-validation-for="Password"></span>
						</div>

						<label class="container">
							Şifremi Unuttum <a href="#">Kullanıcı Adı</a> / <a href="#">Şifre?</a>
						</label>
						<button class="btn">Giriş Yapın</button>
					</form>
					<div class="copy-right text-center">
						<p>
							© @DateTime.Now.Year Tatil & Seyahat. Tüm Hakları Saklıdır.
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>
</body>
</html>
