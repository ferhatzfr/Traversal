@model Traversal.Models.MailRequest

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Mail Gönder</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>   
                            </thead>
                            <tbody>
                                <div class="card-body p-3">
                                    <form method="post" enctype="multipart/form-data" class="signin-form">
                                        <div class="form-input" style="padding-left: 10px;padding-right: 10px;">
                                            @Html.Label("Alıcı Mail Adresi")
                                            <input type="text" asp-for="ReceiverMail" class="form-control" />
                                        </div>
                                        <br />
                                        <div class="form-input" style="padding-left: 10px;padding-right: 10px;">
                                            @Html.Label("Konu Başlığı")
                                            <input type="text" asp-for="Subject" class="form-control" />
                                        </div>
                                        <br />
                                        <div class="form-input" style="padding-left: 10px;padding-right: 10px;">
                                            @Html.Label("İçerik")
                                            <textarea cols="30" rows="5" asp-for="Body" class="form-control"></textarea>
                                        </div>
                                        <br />
                                        <button class="btn btn-success">Gönder</button>
                                    </form>
                                </div>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>