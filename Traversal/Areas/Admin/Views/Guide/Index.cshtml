@using EntityLayer.Concreate
@model List<Guide>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Rehberlerimiz</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-center text-secondary text-sm font-weight-bolder opacity-7">#</th>
                                    <th class="text-center text-secondary text-sm font-weight-bolder opacity-7">Görsel</th>
                                    <th class="text-center text-secondary text-sm font-weight-bolder opacity-7">Ad Soyad</th>
                                    <th class="text-center text-secondary text-sm font-weight-bolder opacity-7">Bölge</th>
                                    <th class="text-center text-uppercase text-secondary text-sm font-weight-bolder opacity-7">Durum</th>
                                    <th class="text-center text-uppercase text-secondary text-sm font-weight-bolder opacity-7">Güncelle</th>
                                    <th class="text-center text-uppercase text-secondary text-sm font-weight-bolder opacity-7">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;

                                    <tr>
                                        <td>
                                            <p class="text-center font-weight-bold mb-0">@count</p>
                                        </td>
                                        <td>
                                            <div class="text-center px-2 py-1">
                                                <div>
                                                    <img src="@item.Image" class="avatar avatar-sm me-3" alt="user1">
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-center">@item.Name</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-center font-weight-bold mb-0">@item.Description</p>
                                        </td>

                                        @{
                                            if (item.Status == true)
                                            {
                                                <td class="align-middle text-center text-sm">
                                                    <a href="/Admin/Guide/ChangeToFalse/@item.GuideID" class="badge badge-sm bg-gradient-info">
                                                        Pasif Yap
                                                    </a>
                                                </td>
                                            }
                                            else
                                            {
                                                <td class="align-middle text-center text-sm">
                                                    <a href="/Admin/Guide/ChangeToTrue/@item.GuideID" class="badge badge-sm bg-gradient-danger">
                                                        Aktif Yap
                                                    </a>
                                                </td>
                                            }
                                        }
                                        <td class="align-middle text-center text-sm">
                                            <a href="/Admin/Guide/EditGuide/@item.GuideID" class="badge badge-sm bg-gradient-success">Güncelle</a>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <a href="/Admin/Guide/DeleteGuide/@item.GuideID" class="badge badge-sm bg-gradient-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="/Admin/Guide/AddGuide" class="btn btn-success">Yeni Rehber Oluştur</a>
</div>