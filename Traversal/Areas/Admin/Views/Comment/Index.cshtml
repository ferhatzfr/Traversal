@using EntityLayer.Concreate
@model List<Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Yorum Listesi</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-center text-secondary text-sm font-weight-bolder opacity-7">#</th>
                                    <th class="text-center text-secondary text-sm font-weight-bolder opacity-7">Kullanıcı</th>
                                    <th class="text-center text-secondary text-sm font-weight-bolder opacity-7 ps-2">Rota</th>
                                    <th class="text-center text-secondary text-sm font-weight-bolder opacity-7 ps-2">Tarih</th>
                                    <th class="text-center text-uppercase text-secondary text-sm font-weight-bolder opacity-7">Sil</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <p class="text-center font-weight-bold mb-0">@item.CommentID</p>
                                        </td>
                                        <td>
                                            <div class="text-center px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-center">@item.CommentUser</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-center font-weight-bold mb-0">@item.Destination.City</p>
                                        </td>
                                        <td>
                                            <p class="text-center font-weight-bold mb-0">@(((DateTime)item.CommentDate).ToString("dd-MM-yyyy"))</p>
                                        </td> 
                                        <td class="align-middle text-center text-sm">
                                            <a href="/Admin/Comment/DeleteComment/@item.CommentID" class="badge badge-sm bg-gradient-primary">Sil</a>
                                        </td>
                                       
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <a href="#" class="btn btn-success">Yorum Oluştur</a>
</div>