@using EntityLayer.Concreate
@model List<AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Kullanıcı Tablosu</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-center text-secondary text-sm font-weight-bolder opacity-7">#</th>
                                    <th class="text-center text-secondary text-sm font-weight-bolder opacity-7">Görsel</th>
                                    <th class="text-center text-secondary text-sm font-weight-bolder opacity-7">Ad Soyad</th>
                                    <th class="text-center text-secondary text-sm font-weight-bolder opacity-7 ps-2">Kullanıcı Adı</th>
                                    <th class="text-center text-secondary text-sm font-weight-bolder opacity-7 ps-2">E-Posta</th>
                                    <th class="text-center text-secondary text-sm font-weight-bolder opacity-7 ps-2">Telefon</th>
                                    <th class="text-center text-uppercase text-secondary text-sm font-weight-bolder opacity-7">Yorumlar</th>
                                    <th class="text-center text-uppercase text-secondary text-sm font-weight-bolder opacity-7">Tur Geçmişi</th>
                                    <th class="text-center text-uppercase text-secondary text-sm font-weight-bolder opacity-7">Sil</th>
                                    <th class="text-center text-uppercase text-secondary text-sm font-weight-bolder opacity-7">Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>
                                            <p class="text-center font-weight-bold mb-0">@count</p>
                                        </td>
                                        <td>
                                            <div class="text-center px-2 py-1">
                                                <div>
                                                    <img src="@item.ImageUrl" class="avatar avatar-sm me-3" alt="user1">
                                                </div>
                                                </div>
                                        </td>
                                        <td>
                                            <div>
                                                <div class="text-center flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.Name @item.SurName</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-center font-weight-bold mb-0">@item.UserName</p>
                                        </td>
                                        <td>
                                            <p class="text-center font-weight-bold mb-0">@item.Email</p>
                                        </td>
                                        <td>
                                            <p class="text-center font-weight-bold mb-0">@item.PhoneNumber</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <a href="#" class="badge badge-sm bg-gradient-info">Yorumları Gör</a>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <a href="#" class="badge badge-sm bg-gradient-primary">Tur Geçmişi</a>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <a href="/Admin/User/DeleteUser/@item.Id" class="badge badge-sm bg-gradient-danger">Sil</a>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <a href="/Admin/User/ReservationUser/@item.Id" class="badge badge-sm bg-gradient-success">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <a href="/Admin/User/AddUser/" class="btn btn-success">Yeni Kullanıcı Oluştur</a>
</div>

