@using EntityLayer.Concreate
@model List<Reservation>

@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Geçmiş Rezervasyon Tablosu</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-center text-secondary text-sm font-weight-bolder opacity-7">#</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7">Ad Soyad</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">Rota</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">Kişi Sayısı</th>
                                    <th class="text-uppercase text-secondary text-sm font-weight-bolder opacity-7 ps-2">Rezervasyon Tarihi</th>
                                    <th class="text-center text-uppercase text-secondary text-sm font-weight-bolder opacity-7">Detaylar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>
                                            <p class="text-center font-weight-bold mb-0">@count</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.Description</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.Destination.City</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.PersonCount</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@(((DateTime)item.ReservationDate).ToString("dd-MM-yyyy"))</p>
                                        </td>
                                       
                                        <td class="align-middle text-center text-sm">
                                            <a href="#" class="badge badge-sm bg-gradient-info">Detaylar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
  @*   <a href="#" class="btn btn-success">Yeni Kullanıcı Oluştur</a> *@
</div>